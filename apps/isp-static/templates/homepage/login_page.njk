{% import "homepage/userFormFlds.njk" as userForm %}

<div class="directions">
    <b>DIRECTIONS:</b> <button class="link toggle-button collapsed" data-target="login_directions"></button>
    <div id="login_directions" class="hidden">
        Please use the exact same information you used when you registered for your:
        <ul>
            <li>class code (leave blank unless you are given one), first name, last name, and birthday month and day.</li>
        </ul>
    </div>
</div>

<button id="l-back-button" class="btn-md back-button">Back</button>
<form class="border-container" id="login_form">
    {{ userForm.create("login") }}
    <button type="submit" id="login_submit" class="btn-md">Login</button>
</form>