<br/>
<header class="results-heading">
    {{- heading_prefix | safe -}}
    {% block heading %} {% endblock %}
    {{- heading_suffix | safe -}}
</header>

<div class="results-top">

    <div class="results-top-left">
        <div class="stats-left-wrapper">
            <table class="stats-table">
                <thead>
                    <tr>
                        <th colspan="2">{{leftStatsHeading}}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Mean:</th>
                        <td>
                            <span id="{{page.data.id}}_left_mean" class="hidden">
                                &nbsp; {{ stats.left.mean }} &nbsp; &nbsp; &nbsp;
                            </span>
                            <button id="{{page.data.id}}_reveal_left_mean"
                                    class="reveal-stat btn btn-rect btn-sm btn-primary">
                                Show
                            </button>

                        </td>
                    </tr>
                    <tr>
                        <th>Median:</th>
                        <td>
                            <span id="{{page.data.id}}_left_median" class="hidden">
                                &nbsp; {{ stats.left.median }} &nbsp; &nbsp; &nbsp;
                            </span>
                            <button id="{{page.data.id}}_reveal_left_median"
                                    class="reveal-stat btn btn-rect btn-sm btn-primary">
                                Show
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <th>Mode:</th>
                        <td>
                            <span id="{{page.data.id}}_left_mode" class="hidden">
                                &nbsp; {{ stats.left.mode }} &nbsp; &nbsp; &nbsp;
                            </span>
                            <button id="{{page.data.id}}_reveal_left_mode"
                                    class="reveal-stat btn btn-rect btn-sm btn-primary">
                                Show
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <th>Range:</th>
                        <td>
                            <span id="{{page.data.id}}_left_range" class="hidden">
                                &nbsp; {{ stats.left.range }} &nbsp; &nbsp; &nbsp;
                            </span>
                            <button id="{{page.data.id}}_reveal_left_range"
                                    class="reveal-stat btn btn-rect btn-sm btn-primary">
                                Show
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="results-top-center">
        <div class="results-centered">
            {% block tables %}{% endblock %}
            <p>
                <button id="{{page.data.id}}_show_sorted_table"
                        class="show-sorted-img btn btn-lg btn-rect btn-primary">
                    Sort results from lowest to highest
                </button>
            </p>
            <p id="{{page.data.id}}_sorted_text"
                class="hidden text-lg">
                Results are sorted from lowest to highest
            </p>
        </div>
    </div>

    <div class="results-top-right">
        <div class="stats-right-wrapper">
            <table class="stats-table">
                <thead>
                    <tr>
                        <th colspan="2">{{rightStatsHeading}}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Mean:</th>
                        <td>
                            <span id="{{page.data.id}}_right_mean" class="hidden">
                                &nbsp; {{ stats.right.mean }} &nbsp; &nbsp; &nbsp;
                            </span>
                            <button id="{{page.data.id}}_reveal_right_mean"
                                    class="reveal-stat btn btn-rect btn-sm btn-primary">
                                Show
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <th>Median:</th>
                        <td>
                            <span id="{{page.data.id}}_right_median" class="hidden">
                                &nbsp; {{ stats.right.median }} &nbsp; &nbsp; &nbsp;
                            </span>
                            <button id="{{page.data.id}}_reveal_right_median"
                                    class="reveal-stat btn btn-rect btn-sm btn-primary">
                                Show
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <th>Mode:</th>
                        <td>
                            <span id="{{page.data.id}}_right_mode" class="hidden">
                                &nbsp; {{ stats.right.mode }} &nbsp; &nbsp; &nbsp;
                            </span>
                            <button id="{{page.data.id}}_reveal_right_mode"
                                    class="reveal-stat btn btn-rect btn-sm btn-primary">
                                Show
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <th>Range:</th>
                        <td>
                            <span id="{{page.data.id}}_right_range" class="hidden">
                                &nbsp; {{ stats.right.range }} &nbsp; &nbsp; &nbsp;
                            </span>
                            <button id="{{page.data.id}}_reveal_right_range"
                                    class="reveal-stat btn btn-rect btn-sm btn-primary">
                                Show
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>

<div class="results-bottom">
    <div class="question-region">
    {% block questions %}{% endblock %}
    </div>
</div>